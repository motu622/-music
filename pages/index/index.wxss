/* pages/index/index.wxss */

/* 轮播图样式 */
.banner {
    width: 100%;
    height: 300rpx;
}

.banner image {
    width: 100%;
    height: 100%;
}

/* 导航区域 */
.navContainer {
    display: flex;
}

.navItem {
    width: 20%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.navItem text {
    font-size: 26rpx;
}

.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
    background-color: rgb(240, 19, 19);
    color: #fff;
    text-align: center;
    line-height: 100rpx;
    border-radius: 50%;
    margin: 20rpx 0;
}

/* 推荐歌曲 */
.recommendContainer {
    padding: 20rpx;
}

.recommendContainer .header .title {
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}

.recommendContainer .header .more {
    float: right;
    border: 1rpx solid #333;
    padding: 10rpx 20rpx;
    border-radius: 25rpx;
    font-size: 24rpx;
}

.recommendScroll {
    display: flex;
    height: 300rpx;
    padding-top: 15rpx;
}

.scrollItem {
    width: 200rpx;
    margin-right: 20rpx;
}

.scrollItem image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.scrollItem text {
    display: block;
    font-size: 26rpx;
    /* 单行文本溢出 */
    /* white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */
    /* 多行文本溢出 */
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}


/* 排行榜  */
.topList {
    padding: 20rpx;
}

.topListSwiper {
    height: 400rpx;
}

.swiperItem {
    width: 96%;
    background: #fbfbfb;
}

.swiperItem .title {
    font-size: 30rpx;
    line-height: 80rpx;

}

.musicItem {
    /* 当一个元素设置为flex，其子元素会自动成为block元素*/
    display: flex;
    margin-bottom: 20rpx;
}

.musicItem image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 6rpx;
}

.musicItem .count {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}

.musicItem .musicName {
    height: 100rpx;
    line-height: 100rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}